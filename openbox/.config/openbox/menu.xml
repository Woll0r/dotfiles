<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="openbox" label="Openbox">
  <item label="Obconf">
    <action name="Execute">
      <startupnotify>
        <enabled>true</enabled>
        <name>obconf</name>
      </startupnotify>
      <command>obconf</command>
    </action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure"/>
  </item>
  <item label="Restart">
    <action name="Restart" />
  </item>
</menu>

<menu id="preferences" label="Preferences">
  <item label="LXappearance">
    <action name="Execute">
      <startupnotify>
        <enabled>true</enabled>
        <name>lxappearance</name>
      </startupnotify>
      <command>lxappearance</command>
    </action>
  </item>

  <item label="Tint2 config">
    <action name="Execute">
      <startupnotify>
        <enabled>true</enabled>
        <name>tint2conf</name>
      </startupnotify>
      <command>tint2conf</command>
    </action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <item label="Google Chrome">
    <action name="Execute"><execute>/usr/bin/google-chrome-stable </execute></action>
  </item>
  <item label="Terminator">
    <action name="Execute"><execute>/usr/bin/terminator</execute></action>
  </item>

  <menu id="applications" label="Applications" execute="xdg_menu --format openbox3-pipe --root-menu /etc/xdg/menus/arch-applications.menu" />
  <menu id="preferences" label="Preferences" />
  <menu id="recents" label="Recent documents" execute="/home/wolfgang/dotfiles/helpers/openbox-recent-documents.sh" />

  <separator label="Session" />
  <menu id="openbox" label="Openbox"/>
  <item label="Lock">
    <action name="Execute">
      <execute>loginctl lock-session</execute>
    </action>
  </item>
  <item label="Logout">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
  <item label="Shutdown">
    <action name="Execute">
      <startupnotify>
        <enabled>true</enabled>
        <name>oblogut</name>
      </startupnotify>
      <command>oblogout</command>
    </action>
  </item>
</menu>

</openbox_menu>
